room.afterInit = function() {
  const ground = window.scene.getObjectByName("ground");
  if (!ground) {
    console.error("Ground not found");
    return;
  }

  const textureURL = nac.assets.getUrl("383795");
  const loader = new THREE.TextureLoader();

  loader.load(textureURL, function(texture) {
    texture.wrapS = THREE.RepeatWrapping;
    texture.wrapT = THREE.RepeatWrapping;
    texture.repeat.set(4, 4); // You can change this to 2,2 or 10,10

    const material = new THREE.MeshStandardMaterial({
      map: texture,
      roughness: 1,
      metalness: 0
    });

    ground.material = material;
    ground.material.needsUpdate = true;

    console.log("Custom ground texture applied from asset 383795.");
  }, undefined, function(err) {
    console.error("Failed to load texture:", err);
  });
};

